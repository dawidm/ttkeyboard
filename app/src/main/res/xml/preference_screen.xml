<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference android:title="@string/pref_user_id"
        android:key="user_id"
        android:defaultValue="0"></Preference>
    <SeekBarPreference android:title="@string/pref_height_landscape"
        android:key="height_landscape"
        android:defaultValue="40"
        android:min="1"
        android:max="100"></SeekBarPreference>
    <SeekBarPreference android:title="@string/pref_height_portrait"
        android:key="height_portrait"
        android:defaultValue="35"
        android:min="1"
        android:max="100"></SeekBarPreference>
    <CheckBoxPreference android:title="@string/pref_enable_sound"
        android:key="click_sound"
        android:defaultValue="true"></CheckBoxPreference>
    <SeekBarPreference android:title="@string/pref_sound_volume"
        android:key="click_volume"
        android:defaultValue="50"
        android:min="0"
        android:max="100"></SeekBarPreference>
    <CheckBoxPreference android:title="@string/pref_vibrations"
        android:key="vibrations"
        android:defaultValue="false"></CheckBoxPreference>
    <SeekBarPreference android:title="@string/pref_vibration_duration"
        android:key="vibration_duration"
        android:defaultValue="30"
        android:min="10"
        android:max="60"></SeekBarPreference>
    <EditTextPreference android:title="@string/pref_server_url"
        android:key="remote_url"
        android:defaultValue="https://dmotyka.pl/"></EditTextPreference>
</PreferenceScreen>